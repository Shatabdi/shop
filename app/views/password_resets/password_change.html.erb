<%= form_for @user, :url => password_changed_password_reset_path(@user), :method => :post do |f| %>
	<div class="field">
		<label>Password xyz</label>
   <%= f.password_field :password %>
  </div>
  <div class="field">
  	<label>Password confirmation</label>
  	<%= f.password_field :password_confirmation %>
