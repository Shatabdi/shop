<% @category.each do |category| %>		
	<div class = 'box'>
		<center>
			<p><%= image_tag category.photo.url, :size => '80x80' %></p>
			<p><%= link_to category.name, category_products_path(category) %></p>
			<p><%= category.products.count %></p>
			<%  unless current_user.blank? %>
				<% if current_user.is_admin? %>
					<%= link_to 'show', category_path(category)%>
					<%= link_to 'edit', edit_category_path(category)%></p>
					<%= link_to 'destroy', category_path(category), :method => :delete %>
				<% end %>
			<% end %>
		</center>
	</div>
<% end %>
<button>click me</button>
<% if current_user.is_admin? %>
	<p><%= link_to 'new  category', new_category_path %></p>
<% end unless current_user.blank? %>
